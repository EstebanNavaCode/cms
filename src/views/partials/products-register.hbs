<link rel="stylesheet" href="/assets/css/dashboard.css">
<link rel="stylesheet" href="/assets/css/products.css">

<section class="dashboard">
    <div class="top">

        <i class="uil uil-bars sidebar-toggle"></i>

        <div class="search-box">
            <i class="uil uil-search"></i>
            <input type="text" placeholder="Search here...">
        </div>

        <img src="/assets/img/profile.png" alt="" class="profile-img">

    </div>

    <div class="dash-content">
        <div class="overview">
            <div class="title">
                <ion-icon name="library-outline"></ion-icon>
                <span class="text">Nuevo producto</span>

            </div>

            <div class="form-container">

                <form id="form-register-product" method="POST" class="form" action="/products">

                    <p class="title2">Formulario de registro</p>
                    <p class="message"></p>

                    <div class="flex">

                        <label>
                            <input id="name" name="NOMBRE_LIB" class="input" type="text" placeholder="" required>
                            <span>Titulo</span>
                        </label>

                        <label>
                            <input id="autor" name="AUTOR_LIB" class="input" type="text" placeholder="" required>
                            <span>Autor</span>
                        </label>

                        <label>
                            <input id="lastname" name="EDITORIAL_LIB" class="input" type="text" placeholder="" required>
                            <span>Editorial</span>
                        </label>

                        <div class="category-container">
                            <select id="category" name="CATEGORIA_LIB" class="input" required>
                                <option value="" disabled selected hidden>Categoría</option>
                            </select>

                            <select id="subcategory" name="SUBCATEGORIA_LIB" class="input" required>
                                <option value="" disabled selected hidden>Subcategoría</option>
                            </select>

                        </div>


                    </div>

                    <div class="flex">
                        <div class="left-fields">

                            <label>
                                <input id="isbn" class="input" name="ISBN_LIB" type="input" placeholder="" required="">
                                <span>ISBN</span>
                            </label>

                            <label>
                                <input id="stock" class="input" name="STOCK_LIB" type="input" placeholder=""
                                    required="">
                                <span>Cantidad</span>
                            </label>



                        </div>

                        <label class="custum-file-upload">
                            <ion-icon name="cloud-upload-outline"></ion-icon>
                            <div class="text">Click aquí para subir una imagen</div>
                            <input type="file" id="file" accept="image/*" onchange="previewImage(event)">
                        </label>

                    </div>

                    <button class="submit" type="submit">Registrar usuario</button>
                </form>

                <div class="image-preview">
                    <i id="icon-placeholder" class="uil uil-image-search placeholder-icon"></i>
                    <img id="preview" src="" alt="Vista previa de la imagen">
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Cargar las categorías al cargar la página
    document.addEventListener("DOMContentLoaded", function () {
        fetch('/categories') // Endpoint para obtener las categorías desde la base de datos
            .then(response => response.json())
            .then(categories => {
                const categorySelect = document.getElementById('category');
                categories.forEach(category => {
                    const option = document.createElement('option');
                    option.value = category.ID_LCAT; // El ID de la categoría de la base de datos
                    option.textContent = category.NOMBRE_LCAT;
                    categorySelect.appendChild(option);
                });
            })
            .catch(error => console.error('Error al cargar las categorías:', error));
    });

    // Cargar subcategorías cuando el usuario selecciona una categoría
    document.getElementById('category').addEventListener('change', function () {
        const categoryId = this.value; // Obtener el ID de la categoría seleccionada

        // Llamada al servidor para obtener las subcategorías relacionadas
        fetch(`/subcategories/${categoryId}`) // Endpoint para subcategorías con el ID de la categoría
            .then(response => response.json())
            .then(subcategories => {
                const subcategorySelect = document.getElementById('subcategory');
                subcategorySelect.innerHTML = '<option value="" disabled selected hidden>Subcategoría</option>'; // Limpiar opciones anteriores
                subcategories.forEach(subcategory => {
                    const option = document.createElement('option');
                    option.value = subcategory.ID_SBC; // ID de la subcategoría
                    option.textContent = subcategory.NOMBRE_SBC;
                    subcategorySelect.appendChild(option);
                });
            })
            .catch(error => console.error('Error al cargar las subcategorías:', error));
    });
</script>


<script src="/assets/js/imgPreview.js"></script>