<link rel="stylesheet" href="/assets/css/dashboard.css">
<link rel="stylesheet" href="/assets/css/categories.css">

<!-- Estilos de DataTables -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

<!-- Scripts de DataTables -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<section class="dashboard">

    <div class="dash-content">
        <div class="overview">
            <div class="title">
                <ion-icon name="planet-outline"></ion-icon>
                <span class="text">Nuevo Genero</span>
            </div>

            <div class="form-container">
                <form id="form-register-genero" method="POST" class="form" action="/generos">
                    <p class="title2">Formulario de registro</p>
                    <p class="message"></p>

                    <label>
                        <input id="name" name="nombre" class="input" type="text" placeholder="" required>

                        <span>Nombre</span>

                    </label>

                    <label>
                        <textarea id="descripcion" name="descripcion" class="input textarea" placeholder="" rows="5"
                            required></textarea>


                        <span>Descripción</span>
                    </label>

                    <div class="subcategories-container-form">
                        <label>
                            <input id="subcategory-input" class="input" type="text" />
                            <span>Etiquetas</span>
                        </label>
                        <div id="subcategory-list" class="subcategory-list">
                            <!-- Aquí aparecerán las etiquetas -->
                        </div>
                        <!-- Input oculto para las subcategorías -->
                        <input type="hidden" id="subcategory-values" name="subcategorias" />
                    </div>


                    <button class="submit" type="submit">Registrar genero</button>

                </form>
            </div>
        </div>

    </div>
